<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/scroll_background"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/productRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.35"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_person_24" />

            <LinearLayout
                android:id="@+id/linearLayoutTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="0.65"
                android:orientation="vertical"
                android:paddingLeft="7dp">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Samsung Galaxy S22 Ultra 12/256"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/productShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Brand New"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/bold"
                        android:text="Rs. "
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:fontFamily="@font/bold"
                        android:text="1,00,000"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/productLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2.0"
                    android:gravity="end">

                    <Button
                        android:id="@+id/editButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Edit"
                        android:backgroundTint="@color/edit"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/deleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:text="Delete"
                        android:backgroundTint="@color/delete"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/productLongDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productsubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productSellerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productSellerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Sunakothi, Lalitpur"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="0dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>