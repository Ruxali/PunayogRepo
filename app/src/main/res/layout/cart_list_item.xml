<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cart_list_title_product"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female jeans tshirt"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cart_list_quantity"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_list_title_product"
            android:text="Quantity: 2"
            android:textColor="@color/darkTextColor"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cart_list_price"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_list_quantity"
            android:text="Price: 200"
            android:textSize="20sp"
            android:textColor="@color/darkTextColor"

            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>