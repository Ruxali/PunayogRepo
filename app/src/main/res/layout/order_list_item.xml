<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/scroll_background"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:layout_height="150dp">


    <RelativeLayout
        android:id="@+id/productRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/cartProductImage"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.35"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_person_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="0.65"
                android:orientation="vertical"
                android:paddingLeft="7dp">

                <TextView
                    android:id="@+id/cartProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/bold"
                    android:text="Samsung Galaxy S22 Ultra 12/256"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="25dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/cartProductID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/bold"
                    android:text="Samsung Galaxy S22 Ultra 12/256"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="25dp"
                    android:textStyle="italic"
                    android:visibility="gone"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:text="Rs. "
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cartProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:text="1,00,000"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buyerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/buyerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:text="1,00,000"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/buyerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:text="1,00,000"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>