<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/scroll_background"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:layout_height="160dp"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:id="@+id/productRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/cartProductImage"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.35"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_person_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="0.55"
                android:orientation="vertical"
                android:paddingLeft="7dp">

                <TextView
                    android:id="@+id/cartProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy S22 Ultra 12/256"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/cartProductShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand New"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cartProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1,00,000"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cartProductLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunakothi, Lalitpur"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cartProductLongDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunakothi, Lalitpur"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16dp"
                    android:visibility="invisible"/>

            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_clear_24"
                android:background="@color/whiteTextColor"/>


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>