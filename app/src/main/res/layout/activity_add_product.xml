<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/login_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".AddProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/logo" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/login_bk_color"
                app:cardCornerRadius="10dp">


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="0.75"
                    android:text="@string/post_your_ad"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/bold"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:padding="16dp">


                <Button
                    android:id="@+id/button_choose_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whiteTextColor"
                    android:text="Choose file"

                    android:layout_margin="10dp"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18sp" />


                <ImageView

                    android:id="@+id/image_view_picture"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_below="@id/button_choose_image"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="14dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_file_name"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center_vertical"
                    android:hint="Product name"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="20sp" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/sellerName"
                    style="@style/modifiedEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="0sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/productId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="0sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/productStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="0sp"
                    android:visibility="gone"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/sellerNumber"
                    style="@style/modifiedEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="0sp"
                    android:visibility="gone"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/sellerEmail"
                    style="@style/modifiedEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_view_picture"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="0sp"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextPrice"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_text_file_name"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/editTextPrice"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:prompt="@string/Categories_prompt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/spinnerSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/spinnerCategory"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:entries="@array/subCategories_arrays"
                    android:prompt="@string/subCategories_prompt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextShortDesc"
                    style="@style/modifiedEditText"
                    android:layout_below="@id/spinnerSubCategory"
                    android:layout_marginTop="26dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:hint="Product Short Description"
                    android:inputType="textMultiLine"
                    android:maxLines="2"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextLongDesc"
                    style="@style/modifiedEditText"
                    android:layout_below="@id/editTextShortDesc"
                    android:layout_marginTop="39dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:hint="Specifications of Product"
                    android:inputType="textMultiLine"
                    android:maxLines="15"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextLocation"
                    style="@style/modifiedEditText"
                    android:layout_height="50dp"
                    android:layout_below="@id/editTextLongDesc"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center_vertical"
                    android:hint="Address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_upload_file"
                    style="@style/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextLongDesc"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="100dp"
                    android:backgroundTint="@color/primaryTextColor"
                    android:text="Upload File"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>